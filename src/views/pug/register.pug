html
  head
    title Register page
    meta(name='description', content='A cool thing made with HyperDev')
    link#favicon(rel='icon', href='https://hyperdev.com/favicon-app.ico', type='image/x-icon')
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet',href='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.0.0/css/bootstrap.min.css')
    link(rel='stylesheet', href='/static/style.css')
  body
    div.container
      a(href='/') 返回首页
      h1.text-center.title 注册
      div.form-register
        form.form(action='/register',method='POST')
            .form-group
                label 用户名
                input.form-control(name='username',placeholder='请输入用户名')
            .form-group
                label 密码
                input.form-control(name='password',placeholder='请输入密码',type='password')
            .form-group 
                input.btn.btn-block.btn-info(type='submit',value='注册')
    script(src='https://code.jquery.com/jquery-2.2.1.min.js', integrity='sha256-gvQgAFzTH6trSrAWoH1iPo9Xc96QxSZ3feW6kem+O00=', crossorigin='anonymous')
    script(src='/static/client.js')